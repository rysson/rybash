#!/bin/bash
# (c) by Robert Kalinowski <robert.kalinowski@sharkbits.com>


#------------------------------------------------------------------------------
TRUE='##TRUE##'
FALSE=''
#------------------------------------------------------------------------------
# true if true
is_true()
{
	[[ "$TRUE" = "$1" ]]
}
#------------------------------------------------------------------------------
# true if false
is_false()
{
	[[ "$TRUE" != "$1" ]]
}
#------------------------------------------------------------------------------
